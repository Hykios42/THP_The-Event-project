<div class="container show_event">
  <div class="col text-center">
    <h2>Voici le event n°<%=@event.id%></h2><br>
  </div>

  <div class="card mx-3">
    <div class="card-header">
      <strong><%= @event.title.capitalize!%></strong>
    </div>

    <div class="card-body px-4">

      <blockquote class="blockquote mb-0">
        <em>"<%= @event.description %>"</em><p></p>
        <footer class="blockquote-footer">
          <p>rédigé le <%= @event.created_at %></p>
          <p>Par : <a href="<%=@event.admin_id%>" class="card-link"><%= User.find(@event.admin_id).first_name%> <%= User.find(@event.admin_id).last_name %></a></p>

          <%if current_user%>
            <%if current_user.id == @event.admin_id%>
              <div class="row flex-row">
                <a href="<%=edit_event_path(@event.id)%>" class="btn btn-info ml-4">Modifier</a>
                <%= form_tag url_for(action: 'destroy'), method: "delete" do%>
                  <%= submit_tag "Supprimer", class: 'btn btn-danger ml-3'%>
                <%end%>
              </div>
            <%end%>
          <%else%>
              <br><p>Connecte toi pour modifier tes potins</p>
          <%end%>
        </footer>
      </blockquote>
    </div>
  </div>
</div>