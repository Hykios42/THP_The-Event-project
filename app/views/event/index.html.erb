    <div class="row mx-auto">
      <div class="col-10">
        <p>üíÅ Voici la liste des Events :</p>
      </div>
      </div>
  
      <div class="row">
      <% Event.all.each do |event|%>
        <div class="col">
          <div class="card mb-3" style="width: 17rem; height: 12rem;">
            <div class="card-body">
              <h5 class="card-title"><%= event.title.capitalize!%></h5>
              <h6 class="card-subtitle mb-2 text-muted">by <strong>AJOUT FUTUR : LE NOM DU CREATEUR </strong> </h6>
              <p class="card-text"><%= event.description[0..50] %>...</p> 
                <div class="col text-center">
                  <a href="<%= event_path(event.id)%>" class="btn btn-info">Voir plus</a>
                </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
